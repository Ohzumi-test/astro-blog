---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Card from '@/components/Card.astro';
import {GLOBAL_STYLE} from "../consts";
import "../styles/article.scss"
import type { MicroCMSPost } from '@/lib/microcms';

interface Props {
  post: MicroCMSPost;
}

const { post } = Astro.props;
---

<html lang="ja">
<head>
    <BaseHead title={post.title} description={post.description}/>
</head>

<body>
<Header/>
<main>
    <Card variant={GLOBAL_STYLE} data-pagefind-body>
        <article>
            <h1 class="emphasize">
                {post.title}
            </h1>
            <div class="post-meta" data-pagefind-ignore>
                <p>公開日: {new Date(post.publishedAt).toLocaleDateString('ja-JP')}</p>
                {post.category && (
                    <div class="category-badge">
                        <a href={`/blog/category/${post.category.slug}`} class="category-link">
                            {post.category.name}
                        </a>
                    </div>
                )}
                <span class="source-badge microcms">CMS</span>
            </div>
            {post.tags && post.tags.length > 0 && (
                <div class="tags">
                    {post.tags.map(tag => (
                        <a href={`/blog/tag/${tag.slug}`} class="tag">
                            #{tag.name}
                        </a>
                    ))}
                </div>
            )}
            <div class="content" set:html={post.content}></div>
        </article>
    </Card>
</main>
<Footer/>
</body>
</html>

<style>
    .post-meta {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid #e5e7eb;
        flex-wrap: wrap;
    }

    .category-badge .category-link {
        display: inline-block;
        background-color: var(--color-primary-100);
        color: var(--color-primary-700);
        padding: 0.25rem 0.5rem;
        border-radius: 0.375rem;
        font-size: 0.75rem;
        font-weight: bold;
        text-decoration: none;
        text-transform: uppercase;
        transition: background-color 0.2s ease;
    }

    .category-badge .category-link:hover {
        background-color: var(--color-primary-200);
    }

    .source-badge {
        font-size: 0.75rem;
        padding: 0.125rem 0.375rem;
        border-radius: 0.25rem;
        font-weight: bold;
        text-transform: uppercase;
        background-color: #f3f4f6;
        color: #374151;
    }

    .tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.25rem;
        margin-bottom: 2rem;
    }

    .tag {
        display: inline-block;
        background-color: var(--color-slate-200);
        color: var(--color-slate-700);
        padding: 0.125rem 0.375rem;
        border-radius: 0.25rem;
        font-size: 0.75rem;
        text-decoration: none;
        transition: background-color 0.2s ease;
    }

    .tag:hover {
        background-color: var(--color-slate-300);
    }

    .content {
        line-height: 1.7;
    }

    .content :global(h2) {
        margin-top: 2rem;
        margin-bottom: 1rem;
    }

    .content :global(h3) {
        margin-top: 1.5rem;
        margin-bottom: 0.75rem;
    }

    .content :global(p) {
        margin-bottom: 1rem;
    }

    .content :global(img) {
        max-width: 100%;
        height: auto;
        border-radius: 0.5rem;
        margin: 1rem 0;
    }
</style>