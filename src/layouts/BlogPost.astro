---
import type {CollectionEntry} from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Card from '@/components/Card.astro';
import {GLOBAL_STYLE} from "../consts";
import "../styles/article.scss"

type Props = CollectionEntry<'blog'>['data'];

const {title, description, category, tags, pubDate} = Astro.props;
---

<html lang="en">
<head>
    <BaseHead title={title} description={description}/>
</head>

<body>
<Header/>
<main>
    <Card variant={GLOBAL_STYLE}>
        <article>
            <h1 class="emphasize">
                {title}
            </h1>
            <div class="post-meta">
                <p>公開日: {pubDate.toLocaleDateString('ja-JP')}</p>
                {category && (
                    <div class="category-badge">
                        <a href={`/blog/category/${category.toLowerCase().replace(/\s+/g, '-')}`} class="category-link">
                            {category}
                        </a>
                    </div>
                )}
                <span class="source-badge markdown">MD</span>
            </div>
            {tags && tags.length > 0 && (
                <div class="tags">
                    {tags.map(tag => (
                        <a href={`/blog/tag/${tag.toLowerCase().replace(/\s+/g, '-')}`} class="tag">
                            #{tag}
                        </a>
                    ))}
                </div>
            )}
            <slot/>
        </article>
    </Card>
</main>
<Footer/>
</body>
</html>

<style>
    .post-meta {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid #e5e7eb;
        flex-wrap: wrap;
    }

    .category-badge .category-link {
        display: inline-block;
        background-color: var(--color-primary-100);
        color: var(--color-primary-700);
        padding: 0.25rem 0.5rem;
        border-radius: 0.375rem;
        font-size: 0.75rem;
        font-weight: bold;
        text-decoration: none;
        text-transform: uppercase;
        transition: background-color 0.2s ease;
    }

    .category-badge .category-link:hover {
        background-color: var(--color-primary-200);
    }

    .source-badge {
        font-size: 0.75rem;
        padding: 0.125rem 0.375rem;
        border-radius: 0.25rem;
        font-weight: bold;
        text-transform: uppercase;
    }

    .source-badge.markdown {
        background-color: var(--color-primary-100);
        color: var(--color-primary-700);
    }

    .tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.25rem;
        margin-bottom: 2rem;
    }

    .tag {
        display: inline-block;
        background-color: var(--color-slate-200);
        color: var(--color-slate-700);
        padding: 0.125rem 0.375rem;
        border-radius: 0.25rem;
        font-size: 0.75rem;
        text-decoration: none;
        transition: background-color 0.2s ease;
    }

    .tag:hover {
        background-color: var(--color-slate-300);
    }
</style>