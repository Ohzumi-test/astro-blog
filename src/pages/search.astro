---
import BaseHead from '@/components/BaseHead.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import Card from '@/components/Card.astro';
import SearchBox from '@/components/SearchBox.astro';
import {SITE_TITLE, GLOBAL_STYLE} from '@/consts';
---

<!doctype html>
<html lang="ja">
<head>
    <BaseHead title={`検索 - ${SITE_TITLE}`} description="ブログ記事を検索できます"/>
    <link href="/_pagefind/pagefind-ui.css" rel="stylesheet">
    <script is:inline src="/_pagefind/pagefind-ui.js"></script>
</head>
<body>
<Header/>
<main>
    <Card variant={GLOBAL_STYLE}>
        <h1 class="emphasize">記事を検索</h1>
        <p>キーワードを入力して記事を検索できます。</p>
    </Card>
    
    <Card variant={GLOBAL_STYLE}>
        <SearchBox />
    </Card>
</main>
<Footer/>
</body>
</html>

<style>
    main {
        max-width: 70rem;
        margin: 3rem auto;
        padding: 0 1rem;
    }

    main > * {
        margin-bottom: 2rem;
    }
</style>